{% extends 'base.html.twig' %}

{% block title %}Création{% endblock %}

{% block body %}
    <h1>Création du profil</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.fstName) }}
        {{ form_row(registrationForm.lstName) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.profil) }}

        <button type="submit" class="btn">M'enregistrer</button>
    {{ form_end(registrationForm) }}
{% endblock %}